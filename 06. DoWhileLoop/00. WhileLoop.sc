// scala program for while loop

// while loop is used to iterate code till the specified condition
// tests boolean expression and iterates again and again
// use while loop if you don't know number of iterations prior

// creating object
object MainObject {  
	def main(args: Array[String]) {
		// initialization 
    	var a = 10 

    	// condition  
    	while( a<=20 ){
         println(a)
         // incrementation 
         a = a+2
      }  
   }  
}

